<div class="container group-form-container">
  <header class="page-header">
    <h1>Create a New Group</h1>
  </header>

  <form action="/groups" method="POST" class="group-form">
    <div class="form-group">
      <label for="name">Group Name</label>
      <input type="text" id="name" name="name" 
             value="<%= locals.formData ? formData.name : '' %>" 
             required>
      <div class="form-hint">Choose a name that describes your group's purpose</div>
    </div>

    <div class="form-group">
      <label for="description">Description</label>
      <textarea id="description" name="description" rows="4" 
                ><%= locals.formData ? formData.description : '' %></textarea>
      <div class="form-hint">Describe what your group is about</div>
    </div>

    <div class="form-actions">
      <button type="submit" class="btn create-btn">Create Group</button>
      <a href="/groups" class="btn cancel-btn">Cancel</a>
    </div>
  </form>
</div>