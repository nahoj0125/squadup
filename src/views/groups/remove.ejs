<div class="container">
  <h1>Remove member from: <%= group.name %></h1>
  
  <form action="/groups/<%= group.id %>/remove" method="POST">
    <div class="form-group">
      <label for="username">Remove user:</label>
      <input type="text" id="username" name="username" required>
    </div>
    <button type="submit" class="btn remove-btn">Remove</button>
  </form>
  
  <div class="actions">
    <a href="/groups/<%= group.id %>" class="btn secondary-btn">Back to Group</a>
  </div>
</div>